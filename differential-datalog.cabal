name:                differential-datalog
version:             0.1.0.0
synopsis:            Incremental datalog engine based on differential dataflow
-- description:
-- license:
license-file:        LICENSE
author:              Leonid Ryzhyk
maintainer:          lryzhyk@vmware.com
-- copyright:
category:            Language
build-type:          Simple
cabal-version:       >=1.24

extra-source-files:  tests/datalog_tests/*.dl
                     tests/datalog_test/*.expected

library
  hs-source-dirs:      src
  exposed-modules:     Language.DifferentialDatalog.Syntax
                       Language.DifferentialDatalog.Parse
  other-modules:       Language.DifferentialDatalog.Pos
                       Language.DifferentialDatalog.PP
                       Language.DifferentialDatalog.Ops
                       Language.DifferentialDatalog.Util
  other-extensions:    FlexibleContexts, TypeSynonymInstances, FlexibleInstances, RecordWildCards
  build-depends:       base >=4.7 ,
                       mtl >=2.2 ,
                       parsec >=3.1 ,
                       pretty >= 1.1.3 ,
                       directory >= 1.3 ,
                       containers >= 0.5 ,
                       binary >= 0.8,
                       bytestring >= 0.10,
                       fgl >=5.5
  default-language:    Haskell2010
  ghc-options:         -Wall -fno-warn-missing-signatures
  ghc-prof-options:    -auto-all


executable datalogc
  main-is:             src/Main.hs
  -- other-modules:
  other-extensions:    FlexibleContexts, TypeSynonymInstances, FlexibleInstances, RecordWildCards
  build-depends:       base >=4.7 ,
                       differential-datalog ,
                       filepath >= 1.4 
  default-language:    Haskell2010
  ghc-options:         -Wall -fno-warn-missing-signatures
  ghc-prof-options:    -auto-all

test-suite tests
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             Main.hs
  build-depends:       base >=4.7 ,
                       differential-datalog,
                       tasty >= 1.0 ,
                       tasty-golden >= 2.3 ,
                       filepath >= 1.4 ,
                       HUnit >= 1.6
  default-language:    Haskell2010
  ghc-options:         -Wall -fno-warn-missing-signatures
  ghc-prof-options:    -auto-all

