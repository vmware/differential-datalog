/* Variable shadowing (now legal). */

typedef Alt = C0{x: bit<32>}
            | C1{x: bit<32>}

// shadow argument name
function shadow(v: string): () = {
    var a: Alt = C0{1};

    var i: bit<32> = match (a) {
        C0{.x = v} -> v,
        C1{v} -> v
    }
}

// shadow local variable
function shadow2(): () = {
    var v: string = "bar";

    var v = "foo"
}
