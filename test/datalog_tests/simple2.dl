// Type inference test.
function ti_f(value: Option<string>): Option<(string, string)> {
    var strs = match (value) {
        Some{s} -> string_split(s, ":"),
        None -> return None
    };
    match ((vec_nth(strs, 0), vec_nth(strs, 1))) {
        (Some{port_name}, Some{src_ip}) -> Some{(port_name, src_ip)},
        _ -> None
    }
}

